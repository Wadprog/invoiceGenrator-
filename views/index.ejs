<%- include('partials/header') %>

<div class="wrapper" style="position: relative;">
  <%- include('partials/nav') %>
  <!-- Left side column. contains the logo and sidebar -->
  <%- include('partials/sidebar') %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Almonte Invoice Management System
        <small>Version 2.0</small>
      </h1>
      <h6><%=new Date()%>,</h6>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Info boxes -->
      <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-aqua"
              ><i class="fa fa-desktop"></i
            ></span>

            <div class="info-box-content">
              <span class="info-box-text">Servicios</span>
              <span class="info-box-number"><%= services.length%></span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-red"
              ><i class="fa fa-shopping-cart"></i
            ></span>

            <div class="info-box-content">
              <span class="info-box-text">Ventas</span>
              <span class="info-box-number"><%=invoices.length %></span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->

        <!-- fix for small devices only -->
        <div class="clearfix visible-sm-block"></div>

        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-green"
              ><i class="fa fa-users"></i
            ></span>

            <div class="info-box-content">
              <span class="info-box-text">Clientes</span>
              <span class="info-box-number"><%=clients.length%> </span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <!-- TABLE: LATEST ORDERS -->

      <div class="col-md-12">
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">Ultimos servicios Agregados</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="table-responsive">
              <table class="table no-margin">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Unidad</th>
                    <th>Actiones</th>
                  </tr>
                </thead>

                <tbody>
                  <% services.reverse().forEach(function(service){%>

                  <tr>
                    <td>
                      <span><%= service.name%></span>
                    </td>
                    <td>
                      <span><%= service.price%> $RDS</span>
                    </td>
                    <td>
                      <span><%= service.unit%> </span>
                    </td>
                    <td>
                      <span class="label label-warning">Modificar</span>
                      <span class="label label-danger">Borrar</span>
                    </td>
                  </tr>
                  <%});%>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.box-body -->
          <div class="box-footer clearfix">
            <a
              href="/services/new"
              class="btn btn-sm btn-info btn-flat pull-left"
              >Agregar Nuevo servicio</a
            >
            <a
              href="/services"
              class="btn btn-sm btn-default btn-flat pull-right"
              >Ver todo Los servicios</a
            >
          </div>
          <!-- /.box-footer -->
        </div>
      </div>
      <!-- /.col -->

      <!-- /.row -->
    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('partials/footer') %>
</div>
